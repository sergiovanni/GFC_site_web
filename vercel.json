{
  "version": 2,
  "builds": [
    {
      "src": "public/index.php",
      "use": "@vercel/php"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "public/index.php"
    }
  ],
  "build": {
    "env": {
      "APP_ENV": "production",
      "APP_DEBUG": "false"
    },
    "commands": {
      "build": "npm install && npm run build && composer install --no-dev --optimize-autoloader && php artisan optimize"
    }
  }
}
